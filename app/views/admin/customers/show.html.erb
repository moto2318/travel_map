<div class="container py-5">
  <div class="row mt-2 mb-3 offset-1 text-center">
    <h4 class="p-2 mb-2 bg-light text-dark"><%= @customer.name %>さんの会員詳細</h4>
  </div>
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-list">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <td>氏名</td>
          <td><%= @customer.name %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.is_deleted == true %>
              <p class="text-secondary">退会</p>
            <% else %>
              <p class="text-success">有効</p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-3 offset-2">
      <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success text-white", method: :get %>
    </div>

  </div>
</div>