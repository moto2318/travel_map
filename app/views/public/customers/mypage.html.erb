<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">マイページ</h5>
      <div class="form-body p-4">
        <div class="mx-auto text-center">
            <strong>登録情報</strong>
              <td>ニックネーム</td>
              <td><%= current_customer.name %></td>
              <td>メールアドレス</td>
              <td><%= current_customer.email %></td>
              <div class="btn">
                <%= link_to "編集する", edit_customer_path(current_customer) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">投稿一覧</h5>
      <div class="form-body p-4">
        <div class="mx-auto text-center">
          <tr>
            <td>タイトル</td>
            <td>詳細</td>
            <td>住所</td>
          </tr>
          <% @maps.each do |map| %>
            <div class="col"><%= link_to map.title, map_path(map) %></div>
            <div class="col"><%= map.text %></div>
            <div class="col"><%= map.address %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<footer>
  <!-- フッターコンテンツ -->
</footer>
