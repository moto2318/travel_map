<div class="container">
  <div class="row">
    <!-- 3カラム目（3:9の3） -->
    <div class="col-3">
      <header>
        <h2>マイページ</h2>
        <strong>登録情報</strong>
      </header>
      <table>
        <tr>
          <td>ニックネーム</td>
          <td><%= current_customer.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= current_customer.email %></td>
        </tr>
      </table>
      <div class="btn">
        <%= link_to "編集する", edit_customer_path(current_customer) %>
      </div>

    </div>

    <!-- 9カラム目（3:9の9） -->
    <div class="col-9">


      <h1>投稿一覧</h1>
      <% @maps.each do |map| %>
        <div class="row">
          <div class="col-２">
            <p>タイトル</p>
            <span><%= link_to map.title, map_path(map) %></span>
          </div>
          <div class="col-auto">
            <p>詳細</p>
            <span><%= map.text %></span>
          </div>
          <div class="col-auto">
            <p>住所</p>
            <span><%= map.address %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<footer>
  <!-- フッターコンテンツ -->
</footer>
